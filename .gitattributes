# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf

# Cargo files
Cargo.toml text eol=lf
Cargo.lock text eol=lf

# Shell scripts
*.sh text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Markdown
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.so binary
*.dylib binary
*.dll binary
